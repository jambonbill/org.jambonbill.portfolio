{% extends "BaseTemplate.twig" %}
{% block title %}{{ item.title }} - Pierre BOQUET{% endblock %}
{% block head %}
{{ parent() }}
<style></style>
{% endblock %}

{% block opengraph %}
<meta property="og:site_name" content="Pierre BOQUET Portfolio">
<meta property="og:url" content="https://portfolio.jambonbill.org/{{ item.permalink }}"> 
<meta property="og:title" content="{{ item.title }}">
<meta property="og:type" content="article">
<meta property="og:image" content="{{ item.url_img }}">
<meta property="og:description" content="{{ item.description_short }}">
{% endblock %}

{% block content %}
    
<div class="container">
    
    <div class="row">
        <div class="col-12">
            <a href="/">Home</a>
        </div>
    </div>
    
    <div class="row">
        
        <div class="col-12 col-md-6">
            <div class="img">
                <img src="{{ item.url_img }}" alt="">        
            </div>
        </div>

        <div class="col-12 col-md-6">
            <h2>{{ item.title }}</h2>
            <i class="text-muted">{{ item.tags }}</i>
            <p>{{ item.description|raw }}</p>

            <a href="{{item.url}}">{{item.url}}</a>
            <a href="{{item.url_git}}">{{item.url_git}}</a>
        </div>


        <div class="col-12">
        <hr>
        <a href="{{next.permalink}}" title="{{next.description_short}}"><i class="fa fa-arrow-left"></i> {{next.title}}</a>
        <a href="{{prev.permalink}}" title="{{prev.description_short}}" class="float-end">{{prev.title}} <i class="fa fa-arrow-right"></i></a>
        </div>
        
    </div>

</div>

{% endblock %}

